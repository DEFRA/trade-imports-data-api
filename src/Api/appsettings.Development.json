{
  "Mongo": {
    "DatabaseUri": "mongodb://127.0.0.1:27017/?directConnection=true",
    "DatabaseName": "trade-imports-data-api"
  },
  "DetailedErrors": true,
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Defra.TradeImportsDataApi.Api.Utils.Logging.CustomEcsTextFormatter, Defra.TradeImportsDataApi.Api"
        }
      }
    ]
  }
}
